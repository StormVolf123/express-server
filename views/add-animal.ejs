<html>
  <head>
    <title>Tilføj dyr - CBS ZOO</title>
    <link rel="stylesheet" href="/styles.css" />
  </head>

  <body>
    <div class="container">
      <h1>Tilføj dyr</h1>

      <form action="/add-animal" method="POST">
        <div class="form-group">
          <label for="name">Navn:</label>
          <input type="text" id="name" name="name" required />
        </div>

        <div class="form-group">
          <label for="species">Art:</label>
          <input type="text" id="species" name="species" required />
        </div>

        <div class="form-group">
          <label for="birthDate">Fødselsdag:</label>
          <input type="date" id="birthDate" name="birthDate" required />
        </div>

        <div class="form-group">
          <label for="deathDate">Dødsdag (ikke nødvendigt):</label>
          <input type="date" id="deathDate" name="deathDate" />
        </div>

        <button type="submit">Tilføj dyr</button>
      </form>

      <a href="/" class="back-link">Tilbage til dyreliste</a>
    </div>

    <script src="/public/script.js"></script>
  </body>
</html>
